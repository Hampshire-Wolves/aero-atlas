<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.fragments.randomiserpage.RandomiserFragment">


<ImageView
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:scaleType="fitXY"
    android:src="@drawable/randomiser_page_background_image" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.1"
    android:background="@color/customcolour1" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/randomiserPageBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/arrow_left" />
</LinearLayout>

<androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="0dp"
    app:cardCornerRadius="28dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:translationY="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abyssinica_sil"
            android:gravity="center"
            android:text="@string/spin_the_globe_find_your_next_destination"
            android:textColor="@color/customcolour1"
            android:textSize="40sp"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abyssinica_sil"
            android:text="@string/your_adventure_awaits"
            android:textAlignment="center"
            android:textColor="@color/customcolour1"
            android:textSize="19sp"
            android:textStyle="italic" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/randomiserPageRandomButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:padding="20dp"
            android:background="@drawable/discovery_page_button_background_selector"
            android:text="@string/find_your_next_getaway"
            android:textColor="@color/discovery_page_button_text_color_selector" />


        <View
            android:layout_width="wrap_content"
            android:layout_height="140dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>

</RelativeLayout>
