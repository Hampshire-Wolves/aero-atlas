<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <data>
        <variable
            name="flightItem"
            type="com.hampshirewolves.aeroatlas.model.Flights" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/flightCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="10dp" >


    <androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/outgoingFlightNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:hint="Outgoing Flight No."
            android:textSize="15sp"
            android:textStyle="italic"
            />

        <TextView
            android:id="@+id/outgoingCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/outgoingFlightNumber"
            app:layout_constraintStart_toStartOf="@id/outgoingFlightNumber"
            android:layout_marginTop="5dp"
            android:hint="Departure City"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/outgoingDepartureTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/outgoingCityName"
            app:layout_constraintStart_toStartOf="@id/outgoingCityName"
            android:layout_marginTop="3dp"
            android:hint="Departure Time"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/arrivalCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/outgoingFlightNumber"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:hint="Arrival City"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/outgoingArrivalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/arrivalCityName"
            app:layout_constraintStart_toStartOf="@id/arrivalCityName"
            android:layout_marginTop="3dp"
            android:hint="Arrival Time"
            android:textSize="15sp"
            />


        <TextView
            android:id="@+id/returnFlightNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/outgoingDepartureTime"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:hint="Return Flight No."
            android:textSize="15sp"
            android:textStyle="italic"
            />

        <TextView
            android:id="@+id/returnCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/returnFlightNumber"
            app:layout_constraintStart_toStartOf="@id/outgoingFlightNumber"
            android:layout_marginTop="5dp"
            android:hint="Departure City"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/returnDepartureTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/returnCityName"
            app:layout_constraintStart_toStartOf="@id/returnCityName"
            android:layout_marginTop="3dp"
            android:hint="Departure Time"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/returnArrivalCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/returnFlightNumber"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:hint="Arrival City"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/returnArrivalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/returnArrivalCity"
            app:layout_constraintStart_toStartOf="@id/arrivalCityName"
            android:layout_marginTop="3dp"
            android:hint="Arrival Time"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/returnArrivalTime"
            app:layout_constraintEnd_toEndOf="@id/returnArrivalCity"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="30dp"
            android:hint="Â£Price"
            android:textSize="17sp"
            android:textStyle="bold"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>